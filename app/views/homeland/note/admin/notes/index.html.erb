<% content_for :sitemap do %>
  <span class="current"><%= t('plugin.note') %></span>
<% end %>

<table class="table table-bordered table-striped table-condensed">
<tr>
  <th>#</th>
  <th>标题</th>
  <th>提交人</th>
  <th>更新时间</th>
  <th style="width: 100px"></th>
</tr>
<% @notes.each do |note| %>
<tr class="note">
  <td><%= note.id %></td>
  <td class="title"><%= link_to note.title, note, target: "_blank" %></td>
  <td class="author"><%= user_name_tag(note.user) %></td>
  <td class="time"><%= l note.updated_at, format: :long %></td>
  <td><%= link_to "", admin_note_path(note), 'data-confirm' => 'Are you sure?', method: :delete, class: "fa fa-trash" %></td>
</tr>
<% end %>
</table>

<%= paginate @notes %>
